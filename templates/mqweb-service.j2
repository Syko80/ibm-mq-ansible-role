[Unit]
Description=IBM MQ Web Console
After=network.target

[Service]
ExecStart=/opt/mqm/bin/strmqweb
ExecStop=/opt/mqm/bin/endmqweb
Type=forking
User={{mq_user}}
Group={{mq_group}}
KillMode=none
LimitNOFILE=10240
LimitNPROC=4096

[Install]
WantedBy=multi-user.target